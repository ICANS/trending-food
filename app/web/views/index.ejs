<% layout('layout') -%>

<div id="home">

    <div class="hero-unit">
        <h1>Hello, <%= config.hungry[Math.floor(Math.random()*9)] %>?</h1>
        <br>
        <p>Hey there, we hope you are hungry. We have a lot meals today, look around and you'll find yours.</p>
        <p><a class="btn btn-primary btn-large pull-right" href="/meals">Order now &raquo;</a></p>
    </div>

    <div class="row-fluid">
        <div class="span6">
            <h3><i class="icon-bar-chart"></i> Trending</h3>
            <hr>
            <table class="table table-striped">
            <% if(meals_trending && meals_trending.length > 0) { %>
                <% for(var i = 0; i < meals_trending.length; i++) { %>
                    <tr>
                        <td>
                            <a href="<%= utilities.url.meal(meals_trending[i]._id) %>" title="<%= meals_trending[i].title %>">
                                <div class="thumbnail" style="height: 50px; width: 55px; overflow:hidden;">
                                    <img src="<%= config.api.uri %>/meals/<%= meals_trending[i]._id %>/image" width="80" alt="" class="meal-image">
                                </div>
                            </a>
                        </td>
                        <td class="lead">
                            <a href="<%= utilities.url.meal(meals_trending[i]._id) %>" title="<%= meals_trending[i].title %>">
                                <%= meals_trending[i].title %>
                            </a>
                        </td>
                    </tr>
                <% } %>
            <% } %>
            </table>
       </div>
        <div class="span6">
            <h3><i class="icon-bullhorn"></i> Last orders</h3>
            <hr>
            <dl class="dl-horizontal">
            <% if(orders_last.length > 0) { %>
                <% for(var i = 0; i < orders_last.length; i++) { %>
                    <% if(orders_last[i].meal) { %>
                        <dt><%= orders_last[i].user ? orders_last[i].user.username : 'Anonymous' %></dt>
                        <dd>
                            <a href="<%= utilities.url.meal(orders_last[i].meal._id) %>" title="<%= orders_last[i].meal.title %>">
                                <%= orders_last[i].meal.title %>
                            </a>
                        </dd>
                    <% } %>
                <% } %>
            <% } %>
            </dl>
        </div>
    </div>

</div>