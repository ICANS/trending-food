<% layout('layout') -%>

<div class="page-header">
    <h1>Login</h1>
</div>

<div class="row-fluid">

    <div class="span6">

        <% if(session.failed) { %>
        <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">Ã—</button>
            <strong>Authentication failed</strong>, sorry :(
        </div>
        <% } %>

        <form class="form-horizontal" action="/login" method="POST">
            <div class="control-group">
                <label class="control-label" for="selectHost">Host</label>
                <div class="controls">
                    <select name="host" id="host" class="span12">
                    <% for(var i = 0; i < config.xmpp.hosts.length; i++) { %>
                        <option value="<%= config.xmpp.hosts[i].domain %>" <% if(config.xmpp.hosts[i] == config.xmpp.hosts[config.xmpp.default]) { %>selected="selected"<% } %> value="<%= config.xmpp.hosts[i] %>">
                            <%= config.xmpp.hosts[i].domain %>
                        </option>
                    <% } %>
                    </select>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputUsername">Username</label>
                <div class="controls">
                    <div class="input-prepend span11">
                        <span class="add-on"><i class="icon-user"></i></span>
                        <input type="text" id="inputUsername" name="username" placeholder="Username" class="span12">
                    </div>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="inputPassword">Password</label>
                <div class="controls">
                    <div class="input-prepend span11">
                        <span class="add-on"><i class="icon-lock"></i></span>
                        <input type="password" id="inputPassword" name="password" placeholder="Password" class="span12">
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" class="btn btn-primary pull-right">Sign in <i class="icon-signin"></i></button>
                </div>
            </div>
        </form>

    </div>

</div>